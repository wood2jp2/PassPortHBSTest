<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <title>Curb - Sign Up</title>
  <!-- Latest compiled and minified CSS & JS -->
  <link href="https://maxcdn.bootstrapcdn.com/bootswatch/3.3.7/flatly/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="css/styles.css" media="screen" title="no title">
  <script src="https://code.jquery.com/jquery.js"></script>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js"></script>
</head>

<body>

  <div class="jumbotron jumbotron-fluid">
    <div class="container">
      <h1 class="display-3">Countdown to the Season 9 Premiere</h1>
      <div id="demo">

      </div>
    </div>
  </div>

  <ul class="nav nav-pills" id="bar">
    <li role="presentation"><a href="/home">Home</a></li>
    <li role="presentation"><a href="/post">Post</a></li>
    <li role="presentation"><a href="/dashboard">Dashboard</a></li>
  </ul>

  <br>
  <br>

  <div class="container">


    <div class="col-sm-8">
      <form name='signup' id="sign-up" method='post'>
        <!-- action='/signup' -->
        <div class="form-group">
          <label for="username">User Name:</label>
          <input name='username' type="text" class="form-control" id="user-name">
          <br />
          <label for="password">Password:</label>
          <input name='password' type="password" class="form-control" id="password">
          <br />
          <label for="confirmPassword">Confirm Password:</label>
          <input name='confirmPassword' type="password" class="form-control" id="confirmPassword">
          <br />
          <label for="fullname">Full Name:</label>
          <input name='fullname' type="text" class="form-control" id="name">
          <br />
          <label for="email">Email:</label>
          <input name='email' type="email" class="form-control" id="email">
          <br />

          <input id='submitButton' type="submit" class="btn btn-success submit">
        </div>
      </form>
    </div>

           <div class="col-sm-4">
              <ul class="list-unstyled">
                <li class="media">
                  <a href="https://twitter.com/CurbNews" target="_blank">
                  <img class="twitter d-flex mr-3" src='images/twitter.png' alt="something"/></a>
                  <div class="media-body">
                    Twitter Feed
                </li>
                <li class="media my-4">
                  <a href="http://www.hbo.com/curb-your-enthusiasm" target="_blank">
                  <img class="hbo d-flex mr-3" src="images/hbo.png" alt="Generic placeholder image"/></a>
                  <div class="media-body">
                    Link to Show's Home Page
                  </div>
                </li>
                <li class="media">
                  <a href="http://www.imdb.com/title/tt0264235/" target="_blank">
                  <img class="laugh d-flex mr-3" src="images/laugh.png" alt="Generic placeholder image"/></a>
                  <div class="media-body">
                    Link to Larry David Fan Page
                </li>
              </ul>
              </div>
              </div>
            </div>

  </div>

  <div id="myModal" class="modal fade" role="dialog">
    <div class="modal-dialog">
      <!-- Modal content-->
      <div class="modal-content">
        <div class="modal-header">
          <button href='/blog' type="button" class="close" data-dismiss="modal">&times;</button>
          <h4 class="modal-title">Thank you for joining!</h4>
        </div>
        <div class="modal-body">
          Share some thoughts!
        </div>
        <div class="modal-footer">

          <button id='continueToSite' href='/blog' type="button" class="btn btn-default" data-dismiss="modal">Continue to Site</button>

        </div>
      </div>
    </div>
  </div>
  <!-- Custom Script -->
  <script src="js/signup.js" type="text/javascript"></script>

</body>

</html>
